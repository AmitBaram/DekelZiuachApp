<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark Theme Colors -->
    <Color x:Key="PrimaryBlueColor">#3B82F6</Color> <!-- Slightly lighter blue for dark mode -->
    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlueColor}"/>
    
    <SolidColorBrush x:Key="LightBlueBrush" Color="#1E1E2E"/> <!-- Dark blueish gray -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1F2937"/> <!-- Dark gray card -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#111827"/> <!-- Very dark background -->
    
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#F9FAFB"/> <!-- White text -->
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#9CA3AF"/> <!-- Light gray text -->
    
    <SolidColorBrush x:Key="BorderColorBrush" Color="#374151"/> <!-- Dark border -->
    <SolidColorBrush x:Key="SidebarSeparationBrush" Color="#374151"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#374151"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#111827"/> <!-- Dark input background -->
</ResourceDictionary>
