<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Modern Light-Brown Palette -->
    <Color x:Key="PrimaryBlueColor">#8B5E3C</Color> <!-- Warm Bronze -->
    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlueColor}"/>

    <SolidColorBrush x:Key="LightBlueBrush" Color="#F5F2ED"/> <!-- Soft Sand -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FAF9F6"/> <!-- Warm Cream -->

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#2D1B0E"/> <!-- Deep Chocolate -->
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#7A7169"/> <!-- Muted Taupe -->
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#A59D94"/>

    <SolidColorBrush x:Key="BorderColorBrush" Color="#E5E1D8"/>
    <SolidColorBrush x:Key="SidebarSeparationBrush" Color="#EFEBE4"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#F0ECE4"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#F5F2ED"/>
    <SolidColorBrush x:Key="ElevatedCardBrush" Color="#FFFFFF"/>

    <!-- Solid Brown Brush (was gradient) -->
    <SolidColorBrush x:Key="ModernGradientBrush" Color="{StaticResource PrimaryBlueColor}"/>
</ResourceDictionary>
