<UserControl x:Class="DekelApp.Views.FinishView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Style="{StaticResource ContentCardStyle}" MaxWidth="550">
            <StackPanel HorizontalAlignment="Center">
                <Border Width="80" Height="80" Background="{StaticResource LightBlueBrush}" CornerRadius="40" Margin="0,0,0,32">
                    <Path Data="M9,16.17L4.83,12l-1.42,1.41L9,19 21,7l-1.41-1.41L9,16.17z" Fill="{StaticResource PrimaryBlueBrush}" Stretch="Uniform" Margin="22"/>
                </Border>
                
                <TextBlock Text="Ready to Finish?" Style="{StaticResource PageHeaderStyle}" HorizontalAlignment="Center"/>
                <TextBlock Text="Everything is ready. Review your information one last time before exporting." 
                           TextWrapping="Wrap" TextAlignment="Center" 
                           FontSize="15" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,48"/>
                
                <Button Content="Confirm and Export" 
                        Command="{Binding FinishCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Padding="50,16" 
                        FontSize="18" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,8"/>
                
                <TextBlock Text="You can find the exported files in the designated output folder."
                           FontSize="12" Opacity="0.6" HorizontalAlignment="Center"
                           Foreground="{StaticResource SecondaryTextBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
