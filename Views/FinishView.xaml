<UserControl x:Class="DekelApp.Views.FinishView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Style="{StaticResource CardStyle}" Padding="50" MaxWidth="500">
            <StackPanel HorizontalAlignment="Center">
                <Border Width="64" Height="64" Background="{StaticResource LightBlueBrush}" CornerRadius="32" Margin="0,0,0,20">
                    <Path Data="M9,16.17L4.83,12l-1.42,1.41L9,19 21,7l-1.41-1.41L9,16.17z" Fill="{StaticResource PrimaryBlueBrush}" Stretch="Uniform" Margin="15"/>
                </Border>
                <TextBlock Text="Ready to Finish?" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}"/>
                <TextBlock Text="Validating your inputs and preparing the export..." 
                           TextWrapping="Wrap" TextAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,40"/>
                
                <Button Content="Confirm and Export" 
                        Command="{Binding FinishCommand}" 
                        Padding="40,15" 
                        FontSize="18" 
                        FontWeight="Bold" 
                        Background="{StaticResource PrimaryBlueBrush}" 
                        Foreground="White" 
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
