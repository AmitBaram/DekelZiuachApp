<UserControl x:Class="DekelApp.Views.GeneralInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Pill-style ComboBox to match PillTextBoxStyle -->
        <Style x:Key="PillComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- ToggleButton covers the entire control and opens the dropdown on click -->
                            <ToggleButton x:Name="PART_ToggleButton"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Focusable="False"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="toggleBorder"
                                                Background="{Binding Background, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                CornerRadius="8">
                                            <!-- Chevron arrow on the left side -->
                                            <Path HorizontalAlignment="Left"
                                                  Margin="14,0"
                                                  VerticalAlignment="Center"
                                                  Data="M0,0 L4,4 L8,0"
                                                  Stroke="{DynamicResource SecondaryTextBrush}"
                                                  StrokeThickness="1.5"
                                                  Fill="Transparent"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="toggleBorder" Property="BorderBrush" Value="#D5CBC1"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="toggleBorder" Property="BorderBrush" Value="{DynamicResource PrimaryBlueBrush}"/>
                                                <Setter TargetName="toggleBorder" Property="BorderThickness" Value="1.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <!-- Selected item display (non-interactive overlay) -->
                            <ContentPresenter x:Name="ContentSite"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="36,0,14,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Right"
                                              IsHitTestVisible="False"/>

                            <!-- Dropdown popup -->
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom"
                                   PopupAnimation="Fade">
                                <Border Background="{DynamicResource CardBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderColorBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                        Margin="0,4,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.15" Color="#000000"/>
                                    </Border.Effect>
                                    <ScrollViewer SnapsToDevicePixels="True" Padding="4">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="14,10"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="itemBorder"
                                            Background="Transparent"
                                            Padding="{TemplateBinding Padding}"
                                            CornerRadius="6"
                                            Margin="4,2">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="itemBorder" Property="Background" Value="{DynamicResource LightBlueBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="itemBorder" Property="Background" Value="{DynamicResource LightBlueBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with icon badge (matches FormatsView pattern) -->
        <Border Grid.Row="0" Margin="0,0,0,30">
            <StackPanel Orientation="Horizontal">
                <Border Width="45" Height="45" Background="{StaticResource LightBlueBrush}" CornerRadius="12" Margin="0,0,15,0">
                    <Path Data="{StaticResource IconGeneral}" Fill="{StaticResource PrimaryBlueBrush}" Stretch="Uniform" Margin="11"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="מידע כללי" Style="{StaticResource PageHeaderStyle}"/>
                    <TextBlock Text="הזן את פרטי היחידה והמבצע לניהול הדיווח." Style="{StaticResource PageSubHeaderStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Card -->
        <Border Grid.Row="1" Style="{StaticResource ContentCardStyle}">
            <StackPanel>

                <!-- Section: פרטי זיהוי -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Border Width="4" Height="18" Background="{DynamicResource PrimaryBlueBrush}" CornerRadius="2" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="פרטי זיהוי"
                               FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid Margin="0,0,0,28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- שם המבצע -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="שם המבצע"
                                   FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="2,0,0,8"/>
                        <TextBox Style="{StaticResource PillTextBoxStyle}"
                                 Text="{Binding OperationName, UpdateSourceTrigger=PropertyChanged}"
                                 Height="44"/>
                    </StackPanel>

                    <!-- שם היחידה -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="שם היחידה"
                                   FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="2,0,0,8"/>
                        <TextBox Style="{StaticResource PillTextBoxStyle}"
                                 Text="{Binding UnitName, UpdateSourceTrigger=PropertyChanged}"
                                 Height="44"/>
                    </StackPanel>
                </Grid>

                <Separator Background="{DynamicResource BorderColorBrush}" Margin="0,0,0,28"/>

                <!-- Section: תאריך וסיווג -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Border Width="4" Height="18" Background="{DynamicResource PrimaryBlueBrush}" CornerRadius="2" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="תאריך וסיווג"
                               FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid Margin="0,0,0,28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- תאריך -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="תאריך"
                                   FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="2,0,0,8"/>
                        <DatePicker SelectedDate="{Binding Date}"
                                    Height="44"
                                    VerticalContentAlignment="Center"
                                    BorderThickness="1"
                                    BorderBrush="{DynamicResource BorderColorBrush}"/>
                    </StackPanel>

                    <!-- רמת סיווג -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="רמת סיווג"
                                   FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="2,0,0,8"/>
                        <ComboBox Style="{StaticResource PillComboBoxStyle}"
                                  SelectedValue="{Binding ClassificationLevel, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Content"
                                  FlowDirection="RightToLeft"
                                  Height="44">
                            <ComboBoxItem Content="בלמס"/>
                            <ComboBoxItem Content="סודי"/>
                            <ComboBoxItem Content="סודי ביותר"/>
                            <ComboBoxItem Content="שוס"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <Separator Background="{DynamicResource BorderColorBrush}" Margin="0,0,0,28"/>

                <!-- Section: הערות -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <Border Width="4" Height="18" Background="{DynamicResource PrimaryBlueBrush}" CornerRadius="2" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="הערות נוספות"
                               FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="שדה אופציונלי — ניתן להשאיר ריק"
                           FontSize="11"
                           Foreground="{DynamicResource TertiaryTextBrush}"
                           Margin="14,0,0,10"/>

                <TextBox Style="{StaticResource PillTextBoxStyle}"
                         Text="{Binding GeneralNotes, UpdateSourceTrigger=PropertyChanged}"
                         Height="120"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalContentAlignment="Top"
                         Padding="14,12"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
