<UserControl x:Class="DekelApp.Views.TichumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:DekelApp.Utils.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:AddOneConverter x:Key="LocalAddOneConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <StackPanel Orientation="Horizontal">
                <Border Width="45" Height="45" Background="{StaticResource LightBlueBrush}" CornerRadius="12" Margin="0,0,15,0">
                    <Path Data="{StaticResource IconTichum}" Fill="{StaticResource PrimaryBlueBrush}" Stretch="Uniform" Margin="12"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="אזורי תיחום" Style="{StaticResource PageHeaderStyle}"/>
                    <TextBlock Text="ניהול אזורי תיחום לפי סדר עדיפיות, תיחום ראשון בעדיפות עליונה וכן הלאה" Style="{StaticResource PageSubHeaderStyle}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- List View -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Visibility="{Binding IsListView, Mode=OneWay, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding TichumAreas}" AlternationCount="1000">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ContentCardStyle}" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Style="{StaticResource CircleBadgeStyle}" Width="40" Height="40" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource LocalAddOneConverter}}" 
                                                       FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="20,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16"/>
                                            <TextBlock FontSize="13" Foreground="{StaticResource SecondaryTextBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding Coordinates.Count, StringFormat='{}Area with {0} coordinates'}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsFileUploaded}" Value="True">
                                                                <Setter Property="Text" Value="✓ File uploaded successfully"/>
                                                                <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Content="Edit" Command="{Binding DataContext.EditAreaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Padding="15,5"/>
                                            <Button Style="{StaticResource TrashButtonStyle}" Command="{Binding DataContext.DeleteAreaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Width="36" Height="36"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Command="{Binding AddNewAreaCommand}" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Height="52" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Add New Tichum Area" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>

            <!-- Editor View -->
            <Border Style="{StaticResource ContentCardStyle}" Visibility="{Binding IsEditingArea, Mode=OneWay, Converter={StaticResource BoolToVis}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentArea.Name}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                                <Button Content="UTM" Command="{Binding ToggleToUTMCommand}" Height="36" Padding="12,0" Margin="0,0,12,0" FontWeight="SemiBold" FontSize="13">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsUTM}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource PrimaryBlueBrush}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Geo DD" Command="{Binding ToggleToGeographicCommand}" Height="36" Padding="12,0" FontWeight="SemiBold" FontSize="13">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsGeographic}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource PrimaryBlueBrush}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                            <Button Content="Upload File" Command="{Binding UploadFileCommand}" Padding="15,7" Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding CurrentArea.Coordinates}" AlternationCount="1000">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,25">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Style="{StaticResource CircleBadgeStyle}" Width="30" Height="30" Grid.Column="0" VerticalAlignment="Top" Margin="0,10,0,0">
                                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource LocalAddOneConverter}}" 
                                                           FontSize="12" FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- UTM Fields -->
                                            <StackPanel Grid.Column="1" Margin="15,0,5,0" Visibility="{Binding DataContext.IsUTM, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="X" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource SecondaryTextBrush}" Margin="5,0,0,5"/>
                                                <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Easting, UpdateSourceTrigger=PropertyChanged}" Height="38"/>
                                                <TextBlock Text="{Binding EastingStatusText}" Foreground="{Binding EastingStatusColor}" FontSize="9" Margin="5,2,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Margin="5,0,5,0" Visibility="{Binding DataContext.IsUTM, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="Y" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource SecondaryTextBrush}" Margin="5,0,0,5"/>
                                                <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Northing, UpdateSourceTrigger=PropertyChanged}" Height="38"/>
                                                <TextBlock Text="{Binding NorthingStatusText}" Foreground="{Binding NorthingStatusColor}" FontSize="9" Margin="5,2,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="3" Margin="5,0,10,0" Visibility="{Binding DataContext.IsUTM, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="Zone" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource SecondaryTextBrush}" Margin="5,0,0,5"/>
                                                <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Zone, UpdateSourceTrigger=PropertyChanged}" Height="38"/>
                                                <TextBlock Text="{Binding ZoneStatusText}" Foreground="{Binding ZoneStatusColor}" FontSize="9" Margin="5,2,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <!-- Geographic Fields -->
                                            <StackPanel Grid.Column="1" Margin="15,0,5,0" Visibility="{Binding DataContext.IsGeographic, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="Latitude" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource SecondaryTextBrush}" Margin="5,0,0,5"/>
                                                <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Latitude, UpdateSourceTrigger=PropertyChanged}" Height="38"/>
                                                <TextBlock Text="{Binding LatitudeStatusText}" Foreground="{Binding LatitudeStatusColor}" FontSize="9" Margin="5,2,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Grid.ColumnSpan="2" Margin="5,0,10,0" Visibility="{Binding DataContext.IsGeographic, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="Longitude" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource SecondaryTextBrush}" Margin="5,0,0,5"/>
                                                <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Longitude, UpdateSourceTrigger=PropertyChanged}" Height="38"/>
                                                <TextBlock Text="{Binding LongitudeStatusText}" Foreground="{Binding LongitudeStatusColor}" FontSize="9" Margin="5,2,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <Button Grid.Column="4" Style="{StaticResource TrashButtonStyle}" Command="{Binding DataContext.DeleteCoordinateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" VerticalAlignment="Bottom" Width="32" Height="32" Margin="0,0,0,3"/>
                                            
                                            <!-- Duplicate Warning -->
                                            <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding DuplicateStatusText}" Foreground="Red" FontSize="11" FontWeight="Bold" Visibility="{Binding DuplicateStatusVisibility}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,-15"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button Command="{Binding AddCoordinateCommand}" Style="{StaticResource SecondaryButtonStyle}" Height="45" Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="+" FontSize="18" Margin="0,0,8,0"/>
                                    <TextBlock Text="Add Coordinate"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>

                    <Button Grid.Row="2" Content="Tichum is Done" Command="{Binding FinishAreaCommand}" 
                            Style="{StaticResource PrimaryButtonStyle}" Height="50" Margin="0,20,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
