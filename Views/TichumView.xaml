<UserControl x:Class="DekelApp.Views.TichumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title and Stats -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <StackPanel Orientation="Horizontal">
                <Border Width="45" Height="45" Background="{StaticResource LightBlueBrush}" CornerRadius="12" Margin="0,0,15,0">
                    <Path Data="{StaticResource IconTichum}" Fill="{StaticResource PrimaryBlueBrush}" Stretch="Uniform" Margin="12"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Tichum" FontSize="26" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}"/>
                    <TextBlock Text="Add X and Y coordinate pairs in UTM!" FontSize="14" Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </StackPanel>
            
            <Button Content="Upload File" Command="{Binding UploadFileCommand}" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" Padding="20,10" 
                    Background="{StaticResource LightBlueBrush}" Foreground="{StaticResource PrimaryBlueBrush}" 
                    BorderBrush="{StaticResource PrimaryBlueBrush}" BorderThickness="1" FontWeight="SemiBold">
                <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="8"/></Style></Button.Resources>
            </Button>
        </Grid>

        <!-- Main Card Content -->
        <Border Grid.Row="1" Style="{StaticResource ContentCardStyle}">
            <StackPanel>
                <!-- List of Items -->
                <ItemsControl ItemsSource="{Binding Coordinates}" AlternationCount="1000">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,45">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Style="{StaticResource CircleBadgeStyle}" Grid.Column="0">
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource AddOneConverter}}" 
                                               FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="20,0,10,0">
                                    <TextBlock Text="X Coordinate" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Easting, UpdateSourceTrigger=PropertyChanged}" Height="45"/>
                                    <TextBlock Text="{Binding EastingStatusText}" Foreground="{Binding EastingStatusColor}" FontSize="11" Margin="5,5,0,0" TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="10,0,10,0">
                                    <TextBlock Text="Y Coordinate" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Northing, UpdateSourceTrigger=PropertyChanged}" Height="45"/>
                                    <TextBlock Text="{Binding NorthingStatusText}" Foreground="{Binding NorthingStatusColor}" FontSize="11" Margin="5,5,0,0" TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Margin="10,0,20,0">
                                    <TextBlock Text="Zone" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                    <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Zone, UpdateSourceTrigger=PropertyChanged}" Height="45"/>
                                    <TextBlock Text="{Binding ZoneStatusText}" Foreground="{Binding ZoneStatusColor}" FontSize="11" Margin="5,5,0,0" TextWrapping="Wrap"/>
                                </StackPanel>

                                <Button Grid.Column="4" Style="{StaticResource TrashButtonStyle}" 
                                        Command="{Binding DataContext.DeleteCoordinateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"
                                        VerticalAlignment="Bottom" Margin="0,0,0,5" Width="36" Height="36"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Add Button Nested After List -->
                <Button Command="{Binding AddCoordinateCommand}" 
                        Height="55" Background="{StaticResource PrimaryBlueBrush}" Foreground="White" 
                        FontSize="16" FontWeight="Bold" BorderThickness="0" Margin="0,10,0,0">
                    <Button.Resources>
                        <Style TargetType="Border"><Setter Property="CornerRadius" Value="12"/></Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="22" Margin="0,0,10,0"/>
                        <TextBlock Text="Add New Coordinate" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
