<UserControl x:Class="DekelApp.Views.TichumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title and Stats -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <Border Width="45" Height="45" Background="{StaticResource LightBlueBrush}" CornerRadius="12" Margin="0,0,15,0">
                    <Path Data="{StaticResource IconTichum}" Fill="{StaticResource PrimaryBlueBrush}" Stretch="Uniform" Margin="12"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Tichum" FontSize="26" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}"/>
                    <TextBlock Text="Add coordinate pairs in UTM or Geographic DD!" FontSize="14" Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </StackPanel>
            
            <Button Content="Upload File" Command="{Binding UploadFileCommand}" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" Padding="20,10" 
                    Background="{StaticResource LightBlueBrush}" Foreground="{StaticResource PrimaryBlueBrush}" 
                    BorderBrush="{StaticResource PrimaryBlueBrush}" BorderThickness="1" FontWeight="SemiBold">
                <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="8"/></Style></Button.Resources>
            </Button>
        </Grid>

        <!-- File Upload Status Banner -->
        <Border Grid.Row="1" Visibility="{Binding HasUploadedFile, Converter={StaticResource BoolToVis}}" 
                Background="{StaticResource LightBlueBrush}" CornerRadius="8" Padding="15,10" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="✓" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}" Margin="0,0,10,0"/>
                <TextBlock Text="Selected File:" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding UploadedFileName}" FontSize="13" Foreground="{StaticResource PrimaryTextBrush}"/>
            </StackPanel>
        </Border>

        <!-- Main Card Content -->
        <Border Grid.Row="2" Style="{StaticResource ContentCardStyle}">
            <StackPanel>
                <!-- File Upload Success Message -->
                <Grid Visibility="{Binding HasUploadedFile, Converter={StaticResource BoolToVis}}" Margin="0,20,0,0">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="✓" FontSize="48" FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="File uploaded successfully" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding UploadedFileName}" FontSize="14" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Coordinate Input Section (Hidden when file is uploaded) -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasUploadedFile}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <!-- Coordinate System Toggle -->
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="Coordinate System:" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="UTM" Command="{Binding ToggleToUTMCommand}" Width="80" Height="35" Margin="0,0,10,0" FontWeight="SemiBold">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlueBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUTM}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Geographic DD" Command="{Binding ToggleToGeographicCommand}" Width="120" Height="35" FontWeight="SemiBold">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlueBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlueBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsGeographic}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- List of Items -->
                    <ItemsControl ItemsSource="{Binding Coordinates}" AlternationCount="1000">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,45">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Style="{StaticResource CircleBadgeStyle}" Grid.Column="0">
                                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource AddOneConverter}}" 
                                                   FontWeight="Bold" Foreground="{StaticResource PrimaryBlueBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- UTM Fields -->
                                    <StackPanel Grid.Column="1" Margin="20,0,10,0" Visibility="{Binding DataContext.IsUTM, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="X Coordinate" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                        <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Easting, UpdateSourceTrigger=PropertyChanged}" Height="45"/>
                                        <TextBlock Text="{Binding EastingStatusText}" Foreground="{Binding EastingStatusColor}" FontSize="11" Margin="5,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="10,0,10,0" Visibility="{Binding DataContext.IsUTM, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="Y Coordinate" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                        <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Northing, UpdateSourceTrigger=PropertyChanged}" Height="45"/>
                                        <TextBlock Text="{Binding NorthingStatusText}" Foreground="{Binding NorthingStatusColor}" FontSize="11" Margin="5,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" Margin="10,0,20,0" Visibility="{Binding DataContext.IsUTM, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="Zone" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                        <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Zone, UpdateSourceTrigger=PropertyChanged}" Height="45"/>
                                        <TextBlock Text="{Binding ZoneStatusText}" Foreground="{Binding ZoneStatusColor}" FontSize="11" Margin="5,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <!-- Geographic Fields -->
                                    <StackPanel Grid.Column="1" Margin="20,0,10,0" Visibility="{Binding DataContext.IsGeographic, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="Latitude" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                        <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Latitude, UpdateSourceTrigger=PropertyChanged}" Height="45"/>
                                        <TextBlock Text="{Binding LatitudeStatusText}" Foreground="{Binding LatitudeStatusColor}" FontSize="11" Margin="5,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Grid.ColumnSpan="2" Margin="10,0,20,0" Visibility="{Binding DataContext.IsGeographic, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="Longitude" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                        <TextBox Style="{StaticResource PillTextBoxStyle}" Text="{Binding Longitude, UpdateSourceTrigger=PropertyChanged}" Height="45"/>
                                        <TextBlock Text="{Binding LongitudeStatusText}" Foreground="{Binding LongitudeStatusColor}" FontSize="11" Margin="5,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <Button Grid.Column="4" Style="{StaticResource TrashButtonStyle}" 
                                            Command="{Binding DataContext.DeleteCoordinateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}"
                                            VerticalAlignment="Bottom" Margin="0,0,0,5" Width="36" Height="36"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Add Button Nested After List -->
                    <Button Command="{Binding AddCoordinateCommand}" 
                            Height="55" Background="{StaticResource PrimaryBlueBrush}" Foreground="White" 
                            FontSize="16" FontWeight="Bold" BorderThickness="0" Margin="0,10,0,0">
                        <Button.Resources>
                            <Style TargetType="Border"><Setter Property="CornerRadius" Value="12"/></Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="22" Margin="0,0,10,0"/>
                            <TextBlock Text="Add New Coordinate" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
